# PokerGFX Configuration
# Mode: "json" (NAS file watching) or "websocket" (legacy real-time)
POKERGFX_MODE=json

# JSON file mode settings
# Production (NAS): /volume1/docker/pokergfx/hands
# Local Testing: ./data/test_watch
POKERGFX_JSON_PATH=/volume1/docker/pokergfx/hands
POKERGFX_POLLING_INTERVAL=2.0
POKERGFX_PROCESSED_DB=./data/processed_files.json
POKERGFX_FILE_PATTERN=*.json

# File event debounce (seconds) - prevents duplicate events on rapid modifications
POKERGFX_DEBOUNCE_SECONDS=1.0

# SMB Fallback settings (PRD-0010)
# For local testing, set FALLBACK_ENABLED=false
POKERGFX_FALLBACK_ENABLED=true
POKERGFX_FALLBACK_PATH=./data/manual_import
POKERGFX_HEALTH_CHECK_INTERVAL=30.0
POKERGFX_MAX_RECONNECT=5

# WebSocket mode settings (legacy)
POKERGFX_API_URL=ws://localhost:8080
POKERGFX_API_KEY=your_pokergfx_api_key

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash-native-audio-preview

# Video Capture Configuration
VIDEO_STREAMS=rtsp://table1:554/stream,rtsp://table2:554/stream
VIDEO_FPS=1

# Supabase Configuration (Primary Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_service_role_key
SUPABASE_ANON_KEY=your_anon_key

# Database Configuration (PostgreSQL) - DEPRECATED
# Use Supabase instead. Keep for migration period only.
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=poker_hands
# DB_USER=postgres
# DB_PASSWORD=your_db_password

# vMix Configuration
VMIX_HOST=127.0.0.1
VMIX_PORT=8088
VMIX_AUTO_RECORD=true

# Recording Configuration
RECORDING_PATH=./recordings

# Fallback Configuration
FALLBACK_ENABLED=true

# Logging
LOG_LEVEL=INFO
