# GFX Sync Agent Configuration
# Copy this file to config.env and update values

# =============================================================================
# Supabase Connection (Required)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here

# =============================================================================
# File Watching
# =============================================================================
# Directory to watch for GFX JSON files
SYNC_AGENT_WATCH_PATH=C:\GFX\output

# File pattern to match (regex)
SYNC_AGENT_FILE_PATTERN=PGFX_live_data_export.*\.json$

# Seconds to wait after file modification before syncing (debounce)
SYNC_AGENT_SETTLE_DELAY=2.0

# =============================================================================
# Offline Queue
# =============================================================================
# SQLite database path for offline queue
SYNC_AGENT_QUEUE_DB=C:\GFX\sync_agent\queue.db

# Maximum retry attempts for failed syncs
SYNC_AGENT_MAX_RETRIES=5

# =============================================================================
# Logging
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
SYNC_AGENT_LOG_LEVEL=INFO

# Log file path (optional, logs to console if not set)
SYNC_AGENT_LOG_FILE=C:\GFX\sync_agent\logs\sync_agent.log
