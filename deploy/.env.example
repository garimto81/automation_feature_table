# Poker Hand Capture System - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Required
# =============================================================================

# Database password (used by both PostgreSQL and the application)
DB_PASSWORD=your_secure_password_here

# pgAdmin password (for database management UI)
PGADMIN_PASSWORD=admin_password_here

# =============================================================================
# Optional
# =============================================================================

# Gemini API Key (for AI video secondary source)
# GEMINI_API_KEY=your_gemini_api_key

# vMix settings (for recording control)
# VMIX_HOST=192.168.1.100
# VMIX_PORT=8088
# VMIX_AUTO_RECORD=true

# pgAdmin email
# PGADMIN_EMAIL=admin@your-domain.com

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
